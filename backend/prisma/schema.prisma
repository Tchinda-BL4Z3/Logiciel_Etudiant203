// Configuration de la base (PostgreSQL ou MySQL)

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  nom         String
  email       String   @unique
  password    String
  role        String   @default("TEACHER") 
  departement String?  
  specialite  String?  
  ue          UE[]     
  desid       Desiderata[]
}

model Salle {
  id          Int      @id @default(autoincrement())
  nom         String   @unique
  capacite    Int
  departement String   @default("Informatique") 
  batiment    String   @default("N/A")          
  sessions    Session[]
}

model Classe {
  id          Int       @id @default(autoincrement())
  nom         String    @unique
  effectif    Int
  filiere     String
  departement String    
  sessions    Session[]
}

model UE {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  nom         String
  enseignantId Int
  enseignant   User    @relation(fields: [enseignantId], references: [id])
  sessions    Session[]
}

model Session {
  id           Int      @id @default(autoincrement())
  jour         String   
  plageHoraire String   
  date         DateTime
  salleId      Int
  salle        Salle    @relation(fields: [salleId], references: [id])
  ueId         Int
  ue           UE       @relation(fields: [ueId], references: [id])
  classeId     Int
  classe       Classe   @relation(fields: [classeId], references: [id])
  semestre     Int      @default(1)
  anneeAcad    String   
}

model Desiderata {
  id           Int      @id @default(autoincrement())
  enseignantId Int
  enseignant   User     @relation(fields: [enseignantId], references: [id])
  jour         String
  plageHoraire String
}